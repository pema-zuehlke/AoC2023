{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 0,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "Local AoC configure",
      "displayName": "Local AoC executable",
      "description": "Local build using Make generator",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build/default",
      "cacheVariables": {
        "BUILD_CONFIGURATION": "DEFAULT",
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "Local Test",
      "inherits": "Local AoC configure",
      "displayName": "Local AoC Unit Tests",
      "description": "Test build using Make generator",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build/tests",
      "cacheVariables": {
        "BUILD_CONFIGURATION": "GTEST"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "Local AoC build",
      "configurePreset": "Local AoC configure"
    }
  ],
  "testPresets": [
    {
      "name": "Local AoC test",
      "configurePreset": "Local Test",
      "output": {"outputOnFailure": true},
      "execution": {"noTestsAction": "error", "stopOnFailure": true}
    }

  ],
  "packagePresets": [
    {
      "name": "Local AoC package",
      "configurePreset": "Local AoC configure",
      "generators": [
        "TGZ"
      ]
    }
  ],
  "workflowPresets": [
    {
      "name": "Local AoC configure",
      "steps": [
        {
          "type": "configure",
          "name": "Local AoC configure"
        },
        {
          "type": "build",
          "name": "Local AoC build"
        }
      ]
    }
  ]
}